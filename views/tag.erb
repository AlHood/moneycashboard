

<h1> Table of tags </h1>
<table>
  <tr>
    <th>ID</th>
    <th>Tag Name</th>
    <th> Delete </th>
  </tr>
  <% for tag in @tags %>
  <tr>
    <td><%= tag.id %></td>
    <td><%= tag.tag_name %></td>
  <td><form action="/budget/tag/delete/<%= tag.id %>" method="POST">
    <input type="submit" value="delete" />
  </form></td>

  </tr>
  

  <% end %>
</table>


<h1>Add new tag</h1>
